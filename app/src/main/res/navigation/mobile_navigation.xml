<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_principal_usuario">

    <fragment
        android:id="@+id/nav_principal_usuario"
        android:name="com.example.campusgo.PrincipalUsuarioFragment"
        android:label="fragment_nav_principal_usuario"
        tools:layout="@layout/fragment_nav_principal_usuario" >
        <action
            android:id="@+id/action_principal_to_agregarViaje"
            app:destination="@id/agregarViajesFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_perfil_usuario"
        android:name="com.example.campusgo.PerfilUsuarioFragment"
        android:label="fragment_nav_perfil_usuario"
        tools:layout="@layout/fragment_nav_perfil_usuario" />
    <fragment
        android:id="@+id/viajesFragment"
        android:name="com.example.campusgo.ViajesFragment"
        android:label="fragment_viajes"
        tools:layout="@layout/fragment_viajes" />
    <fragment
        android:id="@+id/agregarViajesFragment"
        android:name="com.example.campusgo.AgregarViajesFragment"
        android:label="Registar un nuevo viaje"
        tools:layout="@layout/fragment_agregar_viajes" />


</navigation>