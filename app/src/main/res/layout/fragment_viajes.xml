<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViajesFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutViajes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/containerBusquedaYLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="0dp">
            <!-- Buscador -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBuscar"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar viajes por destino"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/map_search_24px">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1" />
                ...
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDesde"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    app:chipIcon="@drawable/date_range_24px"
                    app:chipIconVisible="true"
                    app:ensureMinTouchTargetSize="false"
                    tools:text="28/10/2025" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHasta"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    app:chipIcon="@drawable/date_range_24px"
                    app:chipIconVisible="true"
                    app:ensureMinTouchTargetSize="false"
                    tools:text="28/10/2025" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFiltrar"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Filtrar"
                    android:textSize="11dp"
                    app:chipBackgroundColor="@color/blue_campusgo_3"
                    app:chipIcon="@drawable/database_search_24px"
                    app:chipIconVisible="true"
                    app:ensureMinTouchTargetSize="false" />
                ...
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAsientosDisponibles"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asientos disponibles"
                    android:textSize="11dp"
                    app:chipIcon="@drawable/date_range_24px"
                    app:chipIconVisible="true"
                    app:ensureMinTouchTargetSize="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSinRestricciones"
                    style="@style/Widget.Material3.Chip.Input.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Sin restricciones"
                    android:textSize="11dp"
                    app:chipIcon="@drawable/date_range_24px"
                    app:chipIconVisible="true"
                    app:ensureMinTouchTargetSize="false" />
                ...
            </LinearLayout>
            <!-- Lista -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewViajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/cardview_viaje" />
            ...
        </LinearLayout>
        ...
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    ...

    <include
        android:id="@+id/bottom_sheet_reservas"
        layout="@layout/fragment_bottomsheet_reservas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="false"
        app:behavior_peekHeight="80dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>