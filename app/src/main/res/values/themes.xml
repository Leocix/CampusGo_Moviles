<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CampusGo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_campusgo_1</item>
    </style>

    <style name="Theme.CampusGo" parent="Base.Theme.CampusGo" />

    <style name="Theme.CampusGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CampusGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CampusGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_campusgo_3</item>
        <item name="android:shape">rectangle</item>
        <item name="android:width">48dp</item>
        <item name="android:height">40dp</item>
    </style>

</resources>